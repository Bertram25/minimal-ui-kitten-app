        }
      }
    },
    "BottomNavigation": {
      "appearances": {
        "default": {
          "mapping": {
            "backgroundColor": "background-basic-color-2"
          }
        }
      }
    },
    "List": {
      "appearances": {
        "default": {
          "mapping": {
            "backgroundColor": "background-basic-color-1"
          }
        },
        "secondary": {
          "mapping": {
            "backgroundColor": "background-basic-color-3"
          }
        }
      }
    },
    "Card": {
      "appearances": {
        "outlineWithoutFeedback": {
          "mapping": {
            "state": {
              "active": {
