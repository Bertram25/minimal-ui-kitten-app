              "active": {
                "backgroundColor": "color-basic-400"
              }
            }
          }
        },
        "scheduleCardDark": {
          "mapping": {
            "backgroundColor": "color-basic-900",
            "state": {
              "active": {
                "backgroundColor": "color-basic-1000"
              }
            }
          }
        },
        "scheduleCardLightWithoutFeedback": {
          "mapping": {
            "backgroundColor": "color-basic-300",
            "state": {
              "active": {
                "backgroundColor": "color-basic-300"
              }
            }
          }
        },
        "scheduleCardDarkWithoutFeedback": {
          "mapping": {
            "backgroundColor": "color-basic-900",
            "state": {
              "active": {
                "backgroundColor": "color-basic-900"
              }
            }
          }
        },
        "insightCard": {
          "mapping": {
            "headerPaddingHorizontal": 0,
            "headerPaddingVertical": 0,
            "state": {
              "active": {
                "backgroundColor": "background-basic-color-1"
              }
            }
          }
        }
      }
    },
    "MenuItem": {
      "appearances": {
        "default": {
          "mapping": {
            "titleFontSize": "text-paragraph-1-font-size",
