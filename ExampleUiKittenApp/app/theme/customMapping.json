{
  "components": {
    "Select": {
      "appearances": {
        "default": {
          "mapping": {
            "popoverMaxHeight": 270
          }
        }
      }
    },
    "Datepicker": {
      "appearances": {
        "default": {
          "variantGroups": {
            "status": {
              "basic": {
                "textColor": "text-basic-color"
              }
            }
          }
        }
      }
    },
    "BottomNavigationTab": {
      "appearances": {
        "default": {
          "mapping": {
            "textColor": "text-basic-color",
